<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form pad-bot">
        <h1 class="text-center">Create a new Contact</h1>
        <%= simple_form_for @new_contact do |f| %>
          <%= f.input :name %>
          <%= f.input :company %>
          <%= f.input :email %>
          <%= f.input :phone %>
          <%= f.input :address %>
          <%= f.input :city %>
          <%= f.input :postcode %>
          <%#= f.input :lead_id, as: :select, collection: Lead.all.collect { |l| [l.name, l.id] } %>
          <%#= f.hidden_field :lead_id %>
          <%= f.submit "Create Contact", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<style>
  .pad-bot {
    padding-bottom: 25px;
    color:#7f7d7d;
  }
</style>
