    border-bottom: 1px solid rgba(220,224,244,0.4);
    margin:0;

  }

  .lead:last-child {
    border-bottom: none;
  }
  .lead-body {
    /*flex-grow: 1;*/
  }
  .lead-name {
    padding-left: 10px;
    min-width: 100px;
  }
  .lead-name h3 {
    font-size: 13px;
    margin-bottom: 0px;
  }
  .lead-name p {
    font-size: 13px;
    font-weight: lighter;
    opacity: 0.6;
    margin-top: 5px;
  }
  .lead-body {
    font-size: 13px;
    color: rgba(0,0,0,0.7);
    padding-left: 20px;
    padding-right: 10px;
    width:60%;
  }

  .lead-body strong{
    color: rgba(0,0,0,0.9);
    color: rgba(0,0,0,0.9);
  }
  .lead-body p {
    margin: 6px 0;
    color: rgba(0,0,0,0.4);
  }
  .lead-status {
    padding-left: 10px;
    font-weight: bold;
    font-size: 14px;
  }

  .links {
    font-size: 14px;
    padding-right: 10px;
    padding-left: 20px;
  }

  .status.contacted {
    background: #22E0D1;
  }

  .status.converted {
    background: #00FE52;
  }

  .status.rejected {
    background: #ff2622;
    color: gainsboro;
  }

  .status.new {
    background: gainsboro;
  }

  @media all and (max-width: 500px) {
    .lead {
      /* On small screens, we are no longer using row direction but column */
      flex-direction: column;
      padding:5px;
      text-align: center;
    }
  }

