<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="bg-color">
        <div class="lead-header">
          <h5><b>Leads</b></h5>
          <p><%= link_to "Create Lead", new_lead_path %></p>
        </div>
      <% @leads.each do |l| %>
        <div class="lead">
          <div class="lead-name">
            <h3><%= link_to l.name, l %></h3>
            <p><%= l.created_at.strftime("%a, %b %d %y") %></p>
          </div>
          <div class="lead-body">
            <p><b>Email: </b><%= l.email %></p>
            <p> <b>Message: </b> <%= l.message %></p>
          </div>
          <div class="links">
            <p><%= link_to "Edit", lead_path(l) %>| <%= link_to "Convert", lead_path(l) %>|
              <%= link_to "Reject", lead_path(l), method: :delete, data: { confirm: "Are You Sure?"} %>|
              <%= link_to "Delete!", lead_path(l), method: :delete, data: { confirm: "Are You Sure?"} %></p>
          </div>
          <!-- <div class="lead-status">
            <p class="status pending"></p>
            <p class="price"></p>
          </div> -->
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>



<style>
  .lead-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:10px;
    border-bottom: 1px solid #A8A8A8;
    margin: 0px 10px;
  }

  .lead-header h5 {
    color:#888888;
  }

  .lead-header p {
    font-size: 0.8em;

  }

  .bg-color {
    background-color: white;
    margin-top: 10px;
  }

  .lead {
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(220,224,244,0.4);
  margin:0;
  }

  .lead:last-child {
    border-bottom: none;
  }
  .lead-body {
    flex-grow: 1;
  }
  .lead-name {
    padding-left: 10px;
    min-width: 100px;
  }
  .lead-name h3 {
    font-size: 13px;
    margin-bottom: 0px;
  }
  .lead-name p {
    font-size: 13px;
    font-weight: lighter;
    opacity: 0.6;
    margin-top: 5px;
  }
  .lead-body {
    padding-left: 10px;
    font-size: 13px;
    color: rgba(0,0,0,0.7);
  }
  .lead-body {
    padding-left: 20px;
    padding-right: 10px;
    color: rgba(0,0,0,0.4);
  }
  .lead-body strong{
    color: rgba(0,0,0,0.9);
    color: rgba(0,0,0,0.9);
  }
  .lead-body p {
    margin: 6px 0;
  }
  .lead-status {
    font-weight: bold;
    font-size: 14px;
  }

  .links {
    font-size: 14px;
    padding-right: 10px;
  }

  .status.accepted {
