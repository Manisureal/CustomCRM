    border-bottom-left-radius: 10px;
  }

  .lead-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:10px;
    border-bottom: 1px solid #A8A8A8;
    margin: 0px 10px;
  }

  .lead-header h5 {
    color:#888888;
  }

  .lead-header p {
    font-size: 0.8em;

  }

  .bg-color {
    background-color: white;
