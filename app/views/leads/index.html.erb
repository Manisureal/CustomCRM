<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">
      <h1>Welcome to Caremeds CRM</h1>
    </div>
  </div>
</div>

<div class="container">
  <h2>Latest Leads</h2>
  <div class="row">
  <% @leads.each do |l| %>
    <div class="col-xs-12 col-sm-4">
      <div id="lead-name">
        <p>Name: <%= l.name %></p>
      </div>
      <div id="lead-body">
        <p>Email: <%= l.email %></p>
        <p>Message: <%= l.message %>  </p>
      </div>
    </div>
  <% end %>
  </div>
  <%= link_to "Search New Lead", new_lead_path, class: "btn btn-success" %>
</div>




<style>
  #lead-body {
    background:#FFFAFA;
    padding:5px;
    margin-left:5px;
    margin-bottom:15px;
    height:150px;
    color:#7f7d7d;
    border-radius:0px 0px 5px 5px;
  }

  #lead-name {
    background-color:#0198EB;
    padding:5px;
    margin-left:5px;
    color:white;
    border-radius:5px 5px 0px 0px;
  }
</style>
